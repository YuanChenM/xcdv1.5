<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.msk.product.logic.IPD141110Logic">

    <!-- map返回 -->
    <resultMap type="com.msk.product.bean.IPD141110RsParam" id="pdMap">
        <result property="pdTypeCode1" column="CLASSES_CODE"/>
        <result property="pdTypeName1" column="CLASSES_NAME"/>
        <collection property="pdType2List" ofType="com.msk.product.bean.IPD14111001RsParam">
            <result property="pdTypeCode2" column="MACHINING_CODE"/>
            <result property="pdTypeName2" column="MACHINING_NAME"/>
        </collection>
    </resultMap>

    <!-- 查询产品分类 -->
    <select id="findList" parameterType="BaseParam"
            resultMap="pdMap">
		SELECT
		A.CLASSES_CODE
		,B.CLASSES_NAME
		,A.MACHINING_CODE
		,A.MACHINING_NAME
		FROM
		PD_MACHINING AS A
		LEFT JOIN  PD_CLASSES B ON A.CLASSES_CODE = B.CLASSES_CODE
	</select>

</mapper>
